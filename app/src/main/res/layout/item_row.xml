<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#FFC107"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvSongItemRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:text="Song"
        app:layout_constraintStart_toEndOf="@+id/imgViewAlbum"
        app:layout_constraintTop_toTopOf="@+id/imgViewAlbum" />

    <TextView
        android:id="@+id/tvSingerItemRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Singer"
        app:layout_constraintStart_toStartOf="@+id/tvSongItemRow"
        app:layout_constraintTop_toBottomOf="@+id/tvSongItemRow" />

    <TextView
        android:id="@+id/tvGenreItemRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genre"
        app:layout_constraintStart_toStartOf="@+id/tvRatingItemRow"
        app:layout_constraintTop_toTopOf="@+id/tvSingerItemRow" />

    <TextView
        android:id="@+id/tvRatingItemRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:text="Rating"
        app:layout_constraintStart_toEndOf="@+id/tvSongItemRow"
        app:layout_constraintTop_toTopOf="@+id/tvSongItemRow" />

    <ImageView
        android:id="@+id/imgViewAlbum"
        android:layout_width="69dp"
        android:layout_height="57dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>